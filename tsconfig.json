{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "alwaysStrict": true,
    "strict": true,
    "moduleResolution": "node",
    "outDir": "tscOutDir",
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "types": ["@cloudflare/workers-types", "@types/jest", "@types/service-worker-mock"],
    "sourceMap": true,
    "paths": {
      "grammy": ["https://get.grammy.dev/es6@v1.5.3.js"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "test"]
}
